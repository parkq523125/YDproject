<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.company.product.service.impl.ProductMapper">
	<select id="getSearchProduct" resultType="ProductVO" parameterType="ProductVO">
		SELECT
			PRODUCTNUMBER
			,CATEGORY
			,CATEGORY2
			,IMAGE
			,PRODUCTNAME
			,OPTIONNAME
			,OPTIONPRICE
			,PRODUCTSTATE
			,MEMBERID
		FROM PRODUCT
	</select>
	<insert id="insertProduct" parameterType="ProductVO">
		INSERT INTO PRODUCT(	 	
			<if test="productNumber != null">PRODUCTNUMBER</if>
			<if test="category != null">,CATEGORY</if>
			<if test="category2 != null">,CATEGORY2</if>
			<if test="image != null">,IMAGE</if>
			<if test="productName != null">,PRODUCTNAME</if>
			<if test="optionName != null">,OPTIONNAME</if>
			<if test="optionPrice != null">,OPTIONPRICE</if>
			<if test="productState != null">,PRODUCTSTATE</if>
			<if test="memberId != null">,MEMBERID</if>
		) VALUES(
			<if test="productNumber != null">#{productNumber}</if>
			<if test="category != null">,#{category}</if>
			<if test="category2 != null">,#{category2}</if>
			<if test="image != null">,#{image}</if>
			<if test="productName != null">,#{productName}</if>
			<if test="optionName != null">,#{optionName}</if>
			<if test="optionPrice != null">,#{optionPrice}</if>
			<if test="productState != null">,#{productState}</if>
			<if test="memberId != null">,#{memberId}</if>
		)		
	</insert>
</mapper>
<!-- 스프링 초기설정 오류방지용 -->
