<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.member.service.impl.MemberMapper">
	<select id="getMemberList" resultType="com.company.member.service.MemberVO">
	SELECT * FROM MEMBER
	</select>
	<select id="getMember" resultType="com.company.member.service.MemberVO"
							parameterType="com.company.member.service.MemberVO"			>
		
		SELECT *
			
			FROM MEMBER
			WHERE MEMBERID=#{meberId}
	
	</select>
	
	<insert id="insertMember"
			parameterType="com.company.member.service.MemberVO"	>
		INSERT INTO MEMBER(MEMBERID,PASSWORD,EMAIL,NAME,POST,ADDRESS,ADDRESS2,PHONE,AUTH,STARTDATE,ENDDATE)
		VALUE(
		  #{memberId}
		 ,#{password}
		 ,#{email}
		 ,#{name}
		 ,#{post}
		 ,#{address}
		 ,#{address2}
		 ,#{phone}
		 ,#{startDate}
		 ,#{endDate}
		)	
			</insert>
		<delete id="deleteMember" parameterType="com.company.member.service.MemberVO">
			DELETE FROM MEMBER WHERE MEMBERID=#{memberId}
		</delete>
		
		<update id="updateMember"
					parameterType="com.company.member.service.MemberVO">
			UPDATE MEMBER SET password=#{password}
		 , EMAIL=#{email}
		 , NAME=#{name}
		 ,POST #{post}
		 ,ADDRESS = #{address}
		 ,ADDRESS2 = #{address2}
		 ,PHONE = #{phone}
		 , STARTDATE = #{startDate}
		 , ENDDATE = #{endDate}
		 WHERE MEMBERID= #{memberId}
					</update>
</mapper>
